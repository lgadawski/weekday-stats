package com.gadawski;

import com.gadawski.drools.*;

import java.time.DayOfWeek;
import java.time.LocalDate;

rule "Home automation rule"
    //timer (cron:* 0/60 * * * ?)
    //timer (cron:0/1 * * * * ?)
